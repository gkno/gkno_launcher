{
  "id" : "call",
  "description" : "Feed a merged region of alignments to freebayes and compress the output VCF file.",
  "categories" : ["Variant-discovery"],

  "pipeline tasks" : [
    {
      "task" : "merge",
      "tool" : "bamtools-merge"
    },
    {
      "task" : "call",
      "tool" : "freebayes",
      "include in reduced plot" : true
    },
    {
      "task" : "combine-vcf",
      "tool" : "vcf-combine"
    },
    {
      "task" : "compress-vcf",
      "tool" : "bgzip"
    },
    {
      "task" : "index-vcf",
      "tool" : "vcf-index"
    }
  ],

  "arguments" : {
    "Inputs" : [
      {
        "description" : "The input BAM file(s).",
        "long form argument" : "--in",
        "short form argument" : "-i",
        "node id" : "bam"
      },
      {
        "description" : "The reference FASTA file.",
        "long form argument" : "--fasta-reference",
        "short form argument" : "-r",
        "node id" : "reference"
      }
    ],

    "Outputs" : [
      {
        "description" : "The output VCF file.",
        "long form argument" : "--out",
        "short form argument" : "-o",
        "node id" : "compress"
      }
    ],

    "Options" : [
      {
        "description" : "The genomic region.",
        "long form argument" : "--region",
        "short form argument" : "-rg",
        "node id" : "region"
      }
    ]
  },

  "unique graph nodes" : [
    {
      "id" : "bam",
      "task" : "merge",
      "task argument" : "--in",
      "is greedy" : true
    },
    {
      "id" : "region",
      "task" : "merge",
      "task argument" : "--region"
    },
    {
      "id" : "reference",
      "task" : "call",
      "task argument" : "--fasta-reference"
    }
  ],

  "shared graph nodes" : [
    {
      "id" : "call-in",
      "delete files" : true,
      "arguments sharing node" : [
        {
          "task" : "merge",
          "task argument" : "-o"
        },
        {
          "task" : "call",
          "task argument" : "--in"
        }
      ]
    },
    {
      "id" : "combine",
      "delete files" : true,
      "arguments sharing node" : [
        {
          "task" : "call",
          "task argument" : "-o"
        },
        {
          "task" : "combine-vcf",
          "task argument" : "--in",
          "is greedy" : true
        }
      ]
    },
    {
      "id" : "compress",
      "arguments sharing node" : [
        {
          "task" : "combine-vcf",
          "task argument" : "-o"
        },
        {
          "task" : "compress-vcf",
          "task argument" : "--in"
        }
      ]
    },
    {
      "id" : "index",
      "arguments sharing node" : [
        {
          "task" : "compress-vcf",
          "task argument" : "-o"
        },
        {
          "task" : "index-vcf",
          "task argument" : "--in"
        }
      ]
    }
  ],

  "parameter sets" : [
    {
      "id" : "default",
      "description" : "Default parameter set requires user to input all input filenames.",
      "data" : [
        {
          "id" : "region",
          "node" : "region",
          "values" : [20]
        }
      ]
    }
  ]
}
