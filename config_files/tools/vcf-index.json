{
  "id" : "index-vcf",
  "configuration type" : "tool",
  "description" : "Index a VCF file using tabix.",
  "categories" : ["VCF-processing"],
  "tools" : ["tabix"],
  "path" : "tabix",
  "executable" : "tabix",
  "modifier" : "-p vcf",
  "arguments" : {
    "Inputs" : [
      {
        "description" : "The file to be indexed.",
        "long form argument" : "--in",
        "short form argument" : "-i",
        "command line argument" : "--in",
        "modify argument" : "omit",
        "if input is stream" : {
          "argument" : "omit",
          "value" : "omit"
        },
        "required" : true,
        "data type" : "string",
        "extensions" : ["vcf.gz"]
      }
    ],

    "Outputs" : [
      {
        "description" : "The output index file.",
        "long form argument" : "--out",
        "short form argument" : "-o",
        "command line argument" : "--out",
        "modify argument" : "omit",
        "modify value" : "omit",
        "required" : true,
        "data type" : "string",
        "extensions" : ["tbi"],
        "construct filename" : {
          "method": "from tool argument",
          "use argument" : "--in",
          "modify extension" : "append"
        }
      }
    ],

    "Options" : [
      {
        "description" : "Overwrite existing index.",
        "long form argument" : "--force-overwrite",
        "short form argument" : "-f",
        "command line argument" : "-f",
        "data type" : "flag"
      }
    ]
  },

  "parameter sets" : [
    {
      "id" : "default",
      "description" : "Default parameter set requires the users input for all files.",
      "data" : []
    },

    {
      "id" : "test",
      "description" : "Parameter set for use with the test-harness.",
      "data" : [
        {
          "id" : "input",
          "argument" : "--in",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome.vcf.gz"]
        },
        {
          "id" : "overwrite",
          "argument" : "--force-overwrite",
          "values" : ["set"]
        }
      ]
    }
  ]
}
