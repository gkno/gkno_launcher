{
  "id" : "jellyfish-count",
  "description" : "Count k-mers in fasta or fastq files.",
  "categories" : ["Kmer-processing", "Jellyfish"],
  "tools" : ["jellyfish"],
  "path" : "Jellyfish/bin",
  "executable" : "jellyfish",
  "modifier" : "count",
  "help" : "--help|-h",
  "arguments" : {
    "inputs" : [
      {
        "description" : "The input fasta/fastq file.",
        "long form argument" : "--in",
        "short form argument" : "-i",
        "command line argument" : "-in",
        "required" : true,
        "data type" : "string",
        "extensions" : [".fq", ".fq.gz", ".fastq", ".fastq.gz", ".fa", ".fasta", ".fa.gz", ".fasta.gz"],
        "modify argument name on command line" : "hide",
        "allow multiple values" : true,
        "allow list of repeated arguments" : true,
        "modify argument values" : {
          "command" : "<(zcat VALUE)",
          "extensions" : [".fq.gz", ".fastq.gz", ".fa.gz", ".fasta.gz"]
        }
      }
    ],

    "outputs" : [
      {
        "description" : "Output file.",
        "long form argument" : "--out",
        "short form argument" : "-o",
        "command line argument" : "--output",
        "required" : true,
        "data type" : "string",
        "extensions" : [".jf"],
        "construct filename" : {
          "method": "from tool argument",
          "use argument" : "--in",
          "modify extension" : "replace",
          "modify text" : [
            {
              "add text" : ["_"]
            },
            {
              "add argument values" : ["--k-mer"]
            }
          ]
        }
      }
    ],

    "options" : [
      {
        "description" : "Length of k-mer.",
        "long form argument" : "--k-mer",
        "short form argument" : "-k",
        "command line argument" : "--mer-len",
        "required" : true,
        "data type" : "integer",
        "extensions" : ["no extension"]
      },
      {
        "description" : "Initial hash size.",
        "long form argument" : "--size",
        "short form argument" : "-s",
        "command line argument" : "--size",
        "required" : true,
        "data type" : "integer",
        "extensions" : ["no extension"]
      },
      {
        "description" : "Number of processors.",
        "long form argument" : "--processors",
        "short form argument" : "-p",
        "command line argument" : "--threads",
        "data type" : "integer",
        "extensions" : ["no extension"]
      },
      {
        "description" : "Count both strand, canonical representation (default: false)",
        "long form argument" : "--canonical",
        "short form argument" : "-c",
        "command line argument" : "--canonical",
        "data type" : "flag",
        "extensions" : ["no extension"]
      }
    ] 
  },

  "argument order" : [
    "--k-mer",
    "--size",
    "--processors",
    "--canonical",
    "--out",
    "--in"
  ],

  "parameter sets" : [
    {
      "ID" : "default",
      "description" : "Default parameter set requires the users input for all files.",
      "nodes" : []
    },

    {
      "ID" : "test",
      "description" : "Parameter set for use with the test-harness.",
      "nodes" : [
        {
          "ID" : "input",
          "argument" : "--in",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome_1.fq"]
        },
        {
          "ID" : "kmer",
          "argument" : "--k-mer",
          "values" : [15]
        },
        {
          "ID" : "size",
          "argument" : "--size",
          "values" : [1000]
        }
      ]
    }
  ]
}
