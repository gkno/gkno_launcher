{
  "id" : "region-by-dict",
  "description" : "Given a reference dictionary and (optionally) a list of reference sequences, a set of regions are generated.",
  "categories" : ["Genome-regions", "Scripts"],
  "tools" : [],
  "path" : "genomicRegions",
  "executable" : "byDictionary.sh",
  "help" : "--help|-h",
  "arguments" : {
    "inputs" : [
      {
        "description" : "A reference fasta dictionary.",
        "long form argument" : "--reference-dictionary",
        "short form argument" : "-d",
        "command line argument" : "none",
        "required" : true,
        "data type" : "string",
        "extensions" : [".dict"],
        "modify argument name on command line" : "hide"
      },
      {
        "description" : "Only regions from the reference sequence in this file will be output. If --invert-sequences is also set, the sequences not contained in the file will be output.",
        "long form argument" : "--reference-sequences",
        "short form argument" : "-s",
        "command line argument" : "none",
        "data type" : "string",
        "extensions" : ["no extension"],
        "modify argument name on command line" : "hide"
      }
    ],

    "outputs" : [
      {
        "description" : "A list of genomic regions.",
        "long form argument" : "--out",
        "short form argument" : "-o",
        "command line argument" : "none",
        "required" : true,
        "data type" : "string",
        "extensions" : [".list"],
        "modify argument name on command line" : "stdout",
        "construct filename" : {
          "method": "define name",
          "filename" : "region-windows",
          "for multiple runs connect to" : "--reference-dictionary",
          "add extension" : true
        }
      }
    ],

    "Options" : [
      {
        "description" : "Generate regions only for the reference sequences contained in the file specified with --reference-sequences.",
        "long form argument" : "--invert-sequences",
        "short form argument" : "-v",
        "command line argument" : "none",
        "data type" : "bool",
        "extensions" : ["no extension"],
        "modify argument name on command line" : "hide"
      },
      {
        "description" : "The size of the genomic regions.",
        "long form argument" : "--window-size",
        "short form argument" : "-w",
        "command line argument" : "none",
        "required" : true,
        "data type" : "integer",
        "extensions" : ["no extension"],
        "modify argument name on command line" : "hide"
      }
    ]
  },

  "argument order" : [
    "--reference-dictionary",
    "--window-size",
    "--reference-sequences",
    "--invert-sequences",
    "--out"
  ],

  "parameter sets" : [
    {
      "ID" : "default",
      "description" : "Default parameter set requires the users input for all files.",
      "nodes" : [
        {
          "ID" : "invert",
          "argument" : "--invert-sequences",
          "values" : [false]
        }
      ]
    },

    {
      "ID" : "test",
      "description" : "Parameter set for use with the test-harness.",
      "nodes" : [
        {
          "ID" : "dictionary",
          "argument" : "--reference-dictionary",
          "values" : ["$(RESOURCES)/tutorial/current/chr20_fragment.dict"]
        },
        {
          "ID" : "window",
          "argument" : "--window-size",
          "values" : [10000]
        }
      ]
    }
  ]
}
