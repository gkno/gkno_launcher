{
  "id" : "file-list",
  "description" : "Generate a text file containing a list of all files from the given directory with the given extension.",
  "categories" : ["General-file-processing", "Scripts"],
  "tools" : [],
  "path" : "scripts",
  "hide tool" : true,
  "executable" : "list-from-dir.sh",
  "help" : "--help|-h",
  "arguments" : {
    "inputs" : [
      {
        "description" : "Directory from which to extract files.",
        "long form argument" : "--dir",
        "short form argument" : "-d",
        "command line argument" : "none",
        "required" : true,
        "data type" : "string",
        "extensions" : ["no extension"],
        "modify argument name on command line" : "hide"
      }
    ],

    "General" : [
      {
        "description" : "The file extension of the required files.",
        "long form argument" : "--extension",
        "short form argument" : "-e",
        "command line argument" : "none",
        "required" : true,
        "data type" : "string",
        "extensions" : ["no extension"],
        "modify argument name on command line" : "hide"
      }
    ],

    "outputs" : [
      {
        "description" : "The output file list.",
        "long form argument" : "--out",
        "short form argument" : "-o",
        "command line argument" : "none",
        "required" : true,
        "data type" : "string",
        "extensions" : ["no extension"],
        "modify argument name on command line" : "stdout"
      }
    ]
  },

  "argument order" : [
    "--dir",
    "--extension",
    "--out"
  ],

  "parameter sets" : [
    {
      "ID" : "default",
      "description" : "Default parameter set requires the users input for all files.",
      "nodes" : [
      ]
    },

    {
      "ID" : "test",
      "description" : "Parameter set for use with the test-harness.",
      "nodes" : [
        {
          "ID" : "files",
          "argument" : "--dir",
          "values" : ["$(RESOURCES)/tutorial/current"]
        },
        {
          "ID" : "extension",
          "argument" : "--extension",
          "values" : ["bam"]
        },
        {
          "ID" : "output",
          "argument" : "--out",
          "values" : ["output.txt"]
        }
      ]
    }
  ]
}
