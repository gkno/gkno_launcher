{
  "id" : "bamtools-stats",
  "description" : "Prints general alignment statistics.",
  "category" : "alignment processing",
  "tools" : ["bamtools"],
  "path" : "bamtools/bin",
  "executable" : "bamtools",
  "modifier" : "stats",
  "help" : "--help|-h",
  "help group" : "Bamtools bam processing",
  "arguments" : {
    "inputs" : [
      {
        "description" : "the input BAM file.",
        "long form argument" :"--in",
        "short form argument" : "-i",
        "command line argument" : "-in",
        "required" : true,
        "data type" : "string",
        "extensions" : [".bam"]
      }
    ],

    "outputs" : [
      {
        "description" : "the output stats file.",
        "long form argument" : "--out",
        "short form argument" : "-o",
        "command line argument" : "-out",
        "required" : true,
        "data type" : "string",
        "extensions" : [".stats"],
        "modify argument name on command line" : "stdout",
        "construct filename" : {
          "method": "from tool argument",
          "use argument" : "--in",
          "modify extension" : "replace"
        }
      }
    ],

    "options" : [
      {
        "description" : "summarize insert size data.",
        "long form argument" : "--insert",
        "short form argument" : "-n",
        "command line argument" : "-insert",
        "extensions" : ["no extension"],
        "data type" : "flag"
      }
    ]
  },

  "argument order" : [
    "--in",
    "--insert",
    "--out"
  ],

  "instances" : [
    {
      "ID" : "default",
      "description" : "Default instance requires the users input for all files.",
      "nodes" : [
      ]
    },

    {
      "ID" : "test",
      "description" : "Instance for use with the test-harness.",
      "nodes" : [
        {
          "ID" : "BAM1",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome.bam"],
          "argument" : "--in"
        },
        {
          "ID" : "output path",
          "values" : ["./"],
          "argument" : "--output-path"
        }
      ]
    }
  ]
}
