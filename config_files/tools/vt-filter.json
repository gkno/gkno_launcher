{
  "id" : "vt-filter",
  "configuration type" : "tool",
  "description" : "Filter a VCF file based on user-defined criteria.",
  "categories" : ["VCF-processing"],
  "tools" : ["vt"],
  "path" : "vt/",
  "executable" : "vt",
  "modifier" : "filter",
  "arguments" : {
    "Inputs" : [
      {
        "description" : "The input VCF file to be normalized.",
        "long form argument" : "--in",
        "short form argument" : "-i",
        "command line argument" : "none",
        "required" : true,
        "modify argument" : "omit",
        "data type" : "string",
        "if input is stream" : {
          "argument" : "",
          "value" : "-"
        },
        "extensions" : ["vcf", "vcf.gz"]
      },
      {
        "description" : "A file containing list of intervals.",
        "long form argument" : "--intervals-file",
        "short form argument" : "-if",
        "command line argument" : "-I",
        "data type" : "string"
      }
    ],
  
    "Outputs" : [
      {
        "description" : "The filtered VCF file.",
        "long form argument" : "--out",
        "short form argument" : "-o",
        "command line argument" : "-o",
        "required" : true,
        "data type" : "string",
        "extensions" : ["vcf.gz"],
        "if output to stream" : {
          "argument" : "",
          "value" : ""
        },
        "construct filename" : {
          "method": "from tool argument",
          "use argument" : "--in",
          "modify extension" : "replace",
          "modify text" : [
            {
              "add text" : ["_filtered"]
            }
          ]
        }
      }
    ],
  
    "Options" : [
      {
        "description" : "Clear filter tags already present in the VCF file.",
        "long form argument" : "--clear-filters",
        "short form argument" : "-c",
        "command line argument" : "-x",
        "data type" : "flag"
      },
      {
        "description" : "The filter expression (enclose in quotes on the command line).",
        "long form argument" : "--filter-expression",
        "short form argument" : "-f",
        "command line argument" : "-f",
        "required" : true,
        "data type" : "string",
        "include value in quotations" : true
      },
      {
        "description" : "The text to add to the filter field for each record in the VCF file that satisfies the filter expression.",
        "long form argument" : "--tag",
        "short form argument" : "-t",
        "command line argument" : "-t",
        "required" : true,
        "data type" : "string",
        "include value in quotations" : true
      },
      {
        "description" : "The description of the filter to include in the VCF header.",
        "long form argument" : "--tag-description",
        "short form argument" : "-d",
        "command line argument" : "-d",
        "required" : true,
        "data type" : "string",
        "include value in quotations" : true
      }
    ]
  },

  "argument order" : [
    "--intervals-file",
    "--clear-filters",
    "--filter-expression",
    "--tag",
    "--tag-description",
    "--out",
    "--in"
  ],

  "parameter sets" : [
    {
      "id" : "default",
      "description" : "Default parameter set requires the users input for all files.",
      "data" : []
    }
  ]
}
