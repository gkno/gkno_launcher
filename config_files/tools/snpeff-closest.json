{
  "id" : "snpeff-download",
  "description" : "Annotate the closest genomic region.",
  "categories" : ["Annotation"],
  "tools" : ["snpEff"],
  "path" : "snpEff",
  "executable" : "snpEff.jar",
  "precommand" : "java -Xmx4g -jar",
  "modifier" : "closest",
  "help" : "--help|-h",
  "arguments" : {
    "inputs" : [
      {
        "description" : "The input VCF file.",
        "long form argument" : "--in",
        "short form argument" : "-i",
        "command line argument" : "-i",
        "data type" : "string",
        "modify argument name on command line" : "hide",
        "required" : true,
        "extensions" : [".vcf", ".vcf.gz"]
      },
      {
        "description" : "Genome version.",
        "long form argument" : "--genome",
        "short form argument" : "-g",
        "command line argument" : "-g",
        "required" : true,
        "modify argument name on command line" : "hide",
        "data type" : "string",
        "directory" : true,
        "include path on command line" : false,
        "include path from argument" : "-gp",
        "extensions" : ["no extension"]
      }
    ],

    "outputs" : [
      {
        "description" : "Output vcf file.",
        "long form argument" : "--out",
        "short form argument" : "-o",
        "command line argument" : "-o",
        "data type" : "string",
        "required" : true,
        "extensions" : [".vcf"],
        "modify argument name on command line" : "stdout",
        "construct filename" : {
          "method": "from tool argument",
          "use argument" : "--in",
          "modify extension" : "replace",
          "modify text" : [
            {
              "add text" : ["_closestExon"]
            }
          ]
        }
      }
    ],

    "Genome path" : [
      {
        "description" : "Path to genome files (not necesary if the genome was downloaded using 'gkno snpeff-download').",
        "long form argument" : "--path",
        "short form argument" : "-p",
        "command line argument" : "-gp",
        "required" : true,
        "modify argument name on command line" : "omit",
        "data type" : "string",
        "extensions" : ["no extension"]
      }
    ],

    "Options" : [
      {
        "description" : "Measure distance from TSS (transcription start site).",
        "long form argument" : "--transcription-start-site",
        "short form argument" : "-t",
        "command line argument" : "-tss",
        "data type" : "flag",
        "extensions" : ["no extension"]
      }
    ]
  },

  "argument order" : [
    "--transcription-start-site",
    "--path",
    "--genome",
    "--in",
    "--out"
  ],

  "parameter sets" : [
    {
      "ID" : "default",
      "description" : "Default parameter set requires the users input for all files.",
      "nodes" : [
        {
          "ID" : "genome path",
          "argument" : "--path",
          "values" : ["$(TOOL_BIN)/snpEff/data"]
        }
      ]
    },

    {
      "ID" : "test",
      "description" : "Parameter set for use with the test-harness.",
      "nodes" : [
        {
          "ID" : "genome",
          "argument" : "--genome",
          "values" : ["ADWO01"]
        },
        {
          "ID" : "input",
          "argument" : "--in",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome.vcf"]
        }
      ]
    }
  ]
}
