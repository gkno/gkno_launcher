{
  "id" : "bcftools-call",
  "description" : "Call variants from a BCF file.",
  "categories" : ["Variant-discovery", "Samtools"],
  "tools" : ["samtools"],
  "path" : "samtools/bcftools",
  "executable" : "bcftools",
  "modifier" : "view",
  "help" : "--help|-h",
  "arguments" : {
    "inputs" : [
      {
        "description" : "Input BCF file.",
        "long form argument" : "--in",
        "short form argument" : "-i",
        "command line argument" : "none",
        "required" : true,
        "data type" : "string",
        "extensions" : [".bcf"],
        "modify argument name on command line" : "hide",
        "if input is stream" : "replace",
        "replace argument with" : {
          "argument" : "-",
          "value" : ""
        }
      }
    ],

    "outputs" : [
      {
        "description" : "The output BCF file.",
        "long form argument" : "--out",
        "short form argument" : "-o",
        "command line argument" : "none",
        "required" : true,
        "data type" : "string",
        "extensions" : [".bcf"],
        "modify argument name on command line" : "stdout",
        "if output to stream" : "do not include",
        "construct filename" : {
          "method" : "from tool argument",
          "use argument" : "--in",
          "modify extension" : "replace",
          "modify text" : [
            {
              "add text" : ["_sorted"]
            }
          ]
        }
      }
    ],

    "Input/output options" : [
      {
        "description" : "Output BCF instead of VCF,",
        "long form argument" : "--output-bcf",
        "short form argument" : "-ob",
        "command line argument" : "-b",
        "data type" : "flag",
        "hide in help" : true,
        "extensions" : ["no extension"]
      }
    ],

    "Consensus/variant calling options" : [
      {
        "description" : "Call genotypes at variant sites.",
        "long form argument" : "--call-genotypes",
        "short form argument" : "-cg",
        "command line argument" : "-g",
        "data type" : "flag",
        "hide in help" : true,
        "extensions" : ["no extension"]
      },
      {
        "description" : "Output potential variant sites only.",
        "long form argument" : "--only-variants",
        "short form argument" : "-ov",
        "command line argument" : "-v",
        "data type" : "flag",
        "hide in help" : true,
        "extensions" : ["no extension"]
      },
      {
        "description" : "SNP calling.",
        "long form argument" : "--snp-calling",
        "short form argument" : "-sc",
        "command line argument" : "-c",
        "data type" : "flag",
        "hide in help" : true,
        "extensions" : ["no extension"]
      }
    ]
  },

  "argument order" : [
    "--output-bcf",
    "--call-genotypes",
    "--only-variants",
    "--snp-calling",
    "--in",
    "--out"
  ],

  "parameter sets" : [
    {
      "ID" : "default",
      "description" : "Default parameter set requires the users input for all files.",
      "nodes" : [
        {
          "ID" : "bcf",
          "argument" : "--output-bcf",
          "values" : ["set"]
        },
        {
          "ID" : "geno",
          "argument" : "--call-genotypes",
          "values" : ["set"]
        },
        {
          "ID" : "variants",
          "argument" : "--only-variants",
          "values" : ["set"]
        },
        {
          "ID" : "snp",
          "argument" : "--snp-calling",
          "values" : ["set"]
        }
      ]
    },

    {
      "ID" : "test",
      "description" : "Parameter set for use with the test-harness.",
      "nodes" : [
        {
          "ID" : "input",
          "argument" : "--in",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome.bam"]
        }
      ]
    }
  ]
}
