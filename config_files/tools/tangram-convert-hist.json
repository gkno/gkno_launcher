{
  "id" : "tangram-convert-hist",
  "description" : "Convert a binary histogram file to a json file.",
  "category" : "file processing",
  "tools" : ["tangram"],
  "path" : "Tangram/bin",
  "executable" : "tangram_view_scan_file.py",
  "precommand" : "python",
  "help" : "--help|-h",
  "help group" : "SV discovery",
  "arguments" : {
    "inputs" : [
      {
        "description" : "The Tangram histogram file.",
        "long form argument" : "--in",
        "short form argument" : "-i",
        "command line argument" : "--hist",
        "required" : true,
        "data type" : "string",
        "extensions" : [".dat"]
      }
    ],

    "outputs" : [
      {
        "description" : "The output json file.",
        "long form argument" : "--out",
        "short form argument" : "-o",
        "command line argument" : "--out",
        "required" : true,
        "data type" : "string",
        "extensions" : [".json"],
        "construct filename" : {
          "method": "from tool argument",
          "use argument" : "--in",
          "modify extension" : "replace"
        },
        "if output to stream" : "do not include"
      }
    ],

    "Options" : [
      {
        "description" : "The output format.",
        "long form argument" : "--type",
        "short form argument" : "-t",
        "command line argument" : "--type",
        "required" : true,
        "data type" : "string",
        "hide in help" : true,
        "extensions" : ["no extension"]
      }
    ]
  },

  "instances" : [
    {
      "ID" : "default",
      "description" : "Default instance requires the users input for all files.",
      "nodes" : [
        {
          "ID" : "type",
          "argument" : "--type",
          "values" : ["json"]
        }
      ]
    },

    {
      "ID" : "test",
      "description" : "Instance for use with the test-harness.",
      "nodes" : [
        {
          "ID" : "input",
          "argument" : "--in",
          "values" : ["$(RESOURCES)/tutorial/current/tangram-files/hist.dat"]
        }
      ]
    }
  ]
}
