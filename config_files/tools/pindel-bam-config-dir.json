{
  "id" : "pindel-bam-config-dir",
  "description" : "Generate a BAM configuration file for use with Pindel, given a directory containing BAM files.",
  "categories" : ["Scripts"],
  "tools" : [],
  "path" : "scripts",
  "hide tool" : true,
  "executable" : "generate-pindel-bam-config-dir.sh",
  "help" : "--help|-h",
  "arguments" : {
    "inputs" : [
      {
        "description" : "The path to the directory where BAM files reside.",
        "long form argument" : "--path",
        "short form argument" : "-p",
        "command line argument" : "none",
        "required" : true,
        "data type" : "string",
        "extensions" : ["no extension"],
        "modify argument name on command line" : "hide"
      }
    ],

    "outputs" : [
      {
        "description" : "The BAM configuration file.",
        "long form argument" : "--out",
        "short form argument" : "-o",
        "command line argument" : "none",
        "required" : true,
        "data type" : "string",
        "extensions" : [".config"],
        "modify argument name on command line" : "stdout"
      }
    ],

    "Parameters" : [
      {
        "description" : "The average insert size.",
        "long form argument" : "--insert",
        "short form argument" : "-s",
        "command line argument" : "none",
        "required" : true,
        "data type" : "integer",
        "extensions" : ["no extension"],
        "modify argument name on command line" : "hide"
      }
    ]
  },

  "argument order" : [
    "--path",
    "--insert",
    "--out"
  ],

  "parameter sets" : [
    {
      "ID" : "default",
      "description" : "Default parameter set requires the users input for all files.",
      "nodes" : [
      ]
    },

    {
      "ID" : "test",
      "description" : "Parameter set for use with the test-harness.",
      "nodes" : [
        {
          "ID" : "files",
          "argument" : "--path",
          "values" : ["$(RESOURCES)/tutorial/current"]
        },
        {
          "ID" : "output",
          "argument" : "--out",
          "values" : ["bam.config"]
        },
        {
          "ID" : "insert",
          "argument" : "--insert",
          "values" : [200]
        }
      ]
    }
  ]
}
