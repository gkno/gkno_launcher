{
  "id" : "rufus-filter",
  "description" : "All reads in a provided fastq file that contain a k-mer listed in the input l-mer list are output.",
  "experimental" : true,
  "categories" : ["FASTQ-processing", "Rufus", "Marthlab-software"],
  "tools" : ["Rufus"],
  "path" : "Rufus/bin",
  "executable" : "RUFUSv5.Filter",
  "help" : "--help|-h",
  "arguments" : {
    "inputs" : [
      {
        "description" : "Input hash list.",
        "long form argument" : "--in",
        "short form argument" : "-i",
        "command line argument" : "--hash-list",
        "required" : true,
        "data type" : "string",
        "extensions" : [".hl"],
        "modify argument name on command line" : "hide"
      },
      {
        "description" : "Fastq file.",
        "long form argument" : "--fastq",
        "short form argument" : "-q",
        "command line argument" : "--fastq",
        "required" : true,
        "data type" : "string",
        "extensions" : [".fq", ".fq.gz", ".fastq", ".fastq.gz"],
        "modify argument name on command line" : "hide"
      }
    ],

    "outputs" : [
      {
        "description" : "Output file.",
        "long form argument" : "--out",
        "short form argument" : "-o",
        "command line argument" : "--output",
        "required" : true,
        "data type" : "string",
        "extensions" : [".fq", ".fastq"],
        "modify argument name on command line" : "hide",
        "construct filename" : {
          "method": "from tool argument",
          "use argument" : "--fastq",
          "modify extension" : "replace",
          "modify text" : [
            {
              "add text" : ["_filtered"]
            }
          ]
        }
      }
    ],

    "Options" : [
      {
        "description" : "Length of k-mer.",
        "long form argument" : "--k-mer",
        "short form argument" : "-k",
        "command line argument" : "--k-mer",
        "required" : true,
        "data type" : "integer",
        "extensions" : ["no extension"],
        "modify argument name on command line" : "hide"
      },
      {
        "description" : "Minimum base quality.",
        "long form argument" : "--min-base-quality",
        "short form argument" : "-mq",
        "command line argument" : "--min-base-quality",
        "required" : true,
        "data type" : "integer",
        "extensions" : ["no extension"],
        "modify argument name on command line" : "hide"
      },
      {
        "description" : "Hash count threshold.",
        "long form argument" : "--hash-threshold",
        "short form argument" : "-t",
        "command line argument" : "--hash-threshold",
        "required" : true,
        "data type" : "integer",
        "extensions" : ["no extension"],
        "modify argument name on command line" : "hide"
      },
      {
        "description" : "Window.",
        "long form argument" : "--window",
        "short form argument" : "-w",
        "command line argument" : "--window",
        "required" : true,
        "data type" : "integer",
        "extensions" : ["no extension"],
        "modify argument name on command line" : "hide"
      },
      {
        "description" : "Number of threads.",
        "long form argument" : "--threads",
        "short form argument" : "-t",
        "command line argument" : "--threads",
        "required" : true,
        "data type" : "integer",
        "extensions" : ["no extension"],
        "modify argument name on command line" : "hide"
      }
    ]
  },

  "argument order" : [
    "--in",
    "--fastq",
    "--out",
    "--k-mer",
    "--min-base-quality",
    "--hash-threshold",
    "--window",
    "--threads"
  ],

  "parameter sets" : [
    {
      "ID" : "default",
      "description" : "Default parameter set requires the users input for all files.",
      "nodes" : [
        {
          "ID" : "threads",
          "argument" : "--threads",
          "values" : [1]
        }
      ]
    },

    {
      "ID" : "test",
      "description" : "Parameter set for use with the test-harness.",
      "nodes" : [
      ]
    }
  ]
}
