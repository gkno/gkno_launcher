{
  "id" : "musket",
  "description" : "Parallel multi-stage k-mer based error corrector.",
  "category" : "sequence preprocessing",
  "tools" : ["musket"],
  "path" : "musket",
  "executable" : "musket",
  "help" : "--help|-h",
  "arguments" : {
    "inputs" : [
      {
        "description" : "The first mate input file.",
        "long form argument" : "--fastq",
        "short form argument" : "-q",
        "command line argument" : "-in",
        "required" : true,
        "data type" : "string",
        "modify argument name on command line" : "hide",
        "extensions" : [".fa", ".fasta", ".fa.gz", ".fasta.gz", ".fastq", ".fq", ".fastq.gz", ".fq.gz"]
      },
      {
        "description" : "The second mate input file.",
        "long form argument" : "--fastq2",
        "short form argument" : "-q2",
        "command line argument" : "-in",
        "required" : true,
        "data type" : "string",
        "modify argument name on command line" : "hide",
        "extensions" : [".fa", ".fasta", ".fa.gz", ".fasta.gz", ".fastq", ".fq", ".fastq.gz", ".fq.gz"]
      }
    ],
  
    "outputs" : [
      {
        "description" : "The output file stub.",
        "long form argument" : "--out",
        "short form argument" : "-o",
        "command line argument" : "-omulti",
        "required" : true,
        "data type" : "string",
        "extensions" : ["no extension"],
        "is filename stub" : true,
        "filename extensions" : [".0", ".1"],
        "construct filename" : {
          "method": "from tool argument",
          "use argument" : "--fastq",
          "modify extension" : "omit",
          "modify text" : [
            {
              "remove text" : ["_1"]
            }
          ]
        }
      }
    ],
  
    "Options" : [
      {
        "description" : "The kmer size [default: 21].",
        "long form argument" : "--k-mer",
        "short form argument" : "-k",
        "command line argument" : "-k",
        "data type" : "integer",
        "extensions" : ["no extension"]
      },
      {
        "description" : "The estimated number of distinct k-mers for this k-mer size in the input dataset. This value does not affect the correctness of the program, but balances the memory consumption between Bloom filters and hash tables, thus affecting the overall memory footprint of the program.",
        "long form argument" : "--total-k-mers",
        "short form argument" : "-tk",
        "command line argument" : "-k",
        "data type" : "integer",
        "modify argument name on command line" : "hide",
        "extensions" : ["no extension"]
      },
      {
        "description" : "The maximum number of bases that can be trimmed.",
        "long form argument" : "--maximum-trimmed-bases",
        "short form argument" : "-m",
        "command line argument" : "-maxtrim",
        "data type" : "integer",
        "extensions" : ["no extension"]
      },
      {
        "description" : "Keep the output sequences in the same order as the input sequences.",
        "long form argument" : "--order",
        "short form argument" : "-r",
        "command line argument" : "-inorder",
        "data type" : "flag",
        "extensions" : ["no extension"]
      },
      {
        "description" : "Write corrected bases in lower case.",
        "long form argument" : "--lower-case",
        "short form argument" : "-l",
        "command line argument" : "-lowercase",
        "data type" : "flag",
        "extensions" : ["no extension"]
      },
      {
        "description" : "Maximum number of mutations in any region of length k.",
        "long form argument" : "--maximum-mutations",
        "short form argument" : "-a",
        "command line argument" : "-maxerr",
        "data type" : "integer",
        "extensions" : ["no extension"]
      },
      {
        "description" : "The maximum number of correcting iterations per k-mer size",
        "long form argument" : "--maximum-iterations",
        "short form argument" : "-x",
        "command line argument" : "-maxiter",
        "data type" : "integer",
        "extensions" : ["no extension"]
      },
      {
        "description" : "The minimum multiplicty for correct k-mers.",
        "long form argument" : "--minimum-multiplicity",
        "short form argument" : "-y",
        "command line argument" : "-minmulti",
        "data type" : "integer",
        "extensions" : ["no extension"]
      },
      {
        "description" : "Number of threads [>=2, default: 2].",
        "long form argument" : "--processors",
        "short form argument" : "-p",
        "command line argument" : "-p",
        "data type" : "integer",
        "extensions" : ["no extension"]
      }
    ]
  },

  "argument order" : [
    "--out",
    "--k-mer",
    "--total-k-mers",
    "--maximum-trimmed-bases",
    "--order",
    "--lower-case",
    "--maximum-mutations",
    "--maximum-iterations",
    "--minimum-multiplicity",
    "--processors",
    "--fastq",
    "--fastq2"
  ],

  "parameter sets" : [
    {
      "ID" : "default",
      "description" : "Default parameter set requires the users input for all files.",
      "nodes" : [
        {
          "ID" : "kmer",
          "argument" : "--k-mer",
          "values" : [21]
        },
        {
          "ID" : "total kmers",
          "argument" : "--total-k-mers",
          "values" : [268435456]
        },
        {
          "ID" : "processors",
          "argument" : "--processors",
          "values" : [2]
        }
      ]
    },

    {
      "ID" : "test",
      "description" : "Parameter set for use with the test-harness.",
      "nodes" : [
        {
          "ID" : "fastq",
          "argument" : "--fastq",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome_1.fq"]
        },
        {
          "ID" : "fastq2",
          "argument" : "--fastq2",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome_2.fq"]
        }
      ]
    }
  ]
}
