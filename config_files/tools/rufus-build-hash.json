{
  "id" : "rufus-build-hash",
  "description" : "Performs an intersection of two k-mer frequencies and identifies k-mers that are unique to one of the samples. The reads containing these k-mers potentially harbour mutations. These k-mers are provided in the output.",
  "experimental" : true,
  "categories" : ["Kmer-processing", "Marthlab-software", "Rufus"],
  "tools" : ["Rufus"],
  "path" : "Rufus/bin",
  "executable" : "RUFUSv6.BuildHash",
  "help" : "--help|-h",
  "arguments" : {
    "inputs" : [
      {
        "description" : "First set of k-mer counts (reference strain).",
        "long form argument" : "--k-mer-count1",
        "short form argument" : "-k1",
        "command line argument" : "--k-mer-count1",
        "required" : true,
        "data type" : "string",
        "extensions" : [".tab"],
        "modify argument name on command line" : "hide"
      },
      {
        "description" : "Second set of k-mer counts (query strain).",
        "long form argument" : "--k-mer-count2",
        "short form argument" : "-k2",
        "command line argument" : "--k-mer-count2",
        "required" : true,
        "data type" : "string",
        "extensions" : [".tab"],
        "modify argument name on command line" : "hide"
      }
    ],

    "outputs" : [
      {
        "description" : "List of unique k-mers.",
        "long form argument" : "--out",
        "short form argument" : "-o",
        "command line argument" : "--output",
        "required" : true,
        "data type" : "string",
        "extensions" : [".hl"],
        "modify argument name on command line" : "hide",
        "construct filename" : {
          "method": "from tool argument",
          "use argument" : "--k-mer-count2",
          "modify extension" : "replace"
        }
      }
    ],

    "options" : [
      {
        "description" : "Length of k-mer.",
        "long form argument" : "--k-mer",
        "short form argument" : "-k",
        "command line argument" : "--k-mer",
        "required" : true,
        "data type" : "integer",
        "extensions" : ["no extension"],
        "modify argument name on command line" : "hide"
      },
      {
        "description" : "",
        "long form argument" : "--max-depth-reference",
        "short form argument" : "-mdr",
        "command line argument" : "--max-depth-reference",
        "required" : true,
        "data type" : "integer",
        "extensions" : ["no extension"],
        "modify argument name on command line" : "hide"
      },
      {
        "description" : "Minimum depth in query.",
        "long form argument" : "--min-depth-query",
        "short form argument" : "-mq",
        "command line argument" : "--min-depth-query",
        "required" : true,
        "data type" : "integer",
        "extensions" : ["no extension"],
        "modify argument name on command line" : "hide"
      },
      {
        "description" : "Maximum depth.",
        "long form argument" : "--max-depth",
        "short form argument" : "-d",
        "command line argument" : "--max-depth",
        "required" : true,
        "data type" : "integer",
        "extensions" : ["no extension"],
        "modify argument name on command line" : "hide"
      },
      {
        "description" : "Number of threads.",
        "long form argument" : "--threads",
        "short form argument" : "-t",
        "command line argument" : "--threads",
        "required" : true,
        "data type" : "integer",
        "extensions" : ["no extension"],
        "modify argument name on command line" : "hide"
      }
    ]
  },

  "argument order" : [
    "--k-mer-count1",
    "--k-mer-count2",
    "--out",
    "--k-mer",
    "--max-depth-reference",
    "--min-depth-query",
    "--max-depth",
    "--threads"
  ],

  "parameter sets" : [
    {
      "ID" : "default",
      "description" : "Default parameter set requires the users input for all files.",
      "nodes" : [
        {
          "ID" : "threads",
          "argument" : "--threads",
          "values" : [1]
        }
      ]
    },

    {
      "ID" : "test",
      "description" : "Parameter set for use with the test-harness.",
      "nodes" : [
        {
          "ID" : "kmer1",
          "argument" : "--k-mer-count1",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome_1_15.tab"]
        },
        {
          "ID" : "kmer2",
          "argument" : "--k-mer-count2",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome_1_15.tab"]
        },
        {
          "ID" : "kmer",
          "argument" : "--k-mer",
          "values" : [8]
        },
        {
          "ID" : "min-depth-query",
          "argument" : "--min-depth-query",
          "values" : [3]
        },
        {
          "ID" : "max-depth-reference",
          "argument" : "--max-depth-reference",
          "values" : [10]
        },
        {
          "ID" : "max-depth",
          "argument" : "--max-depth",
          "values" : [10]
        }
      ]
    }
  ]
}
