{
  "id" : "bamtools-merge",
  "description" : "Filter a BAM file on many parameters or combinations of parameters.",
  "category" : "alignment processing",
  "tools" : ["bamtools"],
  "path" : "bamtools/bin",
  "executable" : "bamtools",
  "modifier" : "merge",
  "help" : "--help|-h",
  "help group" : "Bamtools bam processing",
  "arguments" : {
    "inputs" : [
      {
        "description" : "the input BAM file.",
        "long form argument" : "--in",
        "short form argument" : "-i",
        "command line argument" : "-in",
        "required" : true,
        "data type" : "string",
        "extensions" : [".bam"],
        "allow multiple values" : true
      },
      {
        "description" : "the input BAM file list (in json format).",
        "long form argument" : "--in-list",
        "short form argument" : "-l",
        "command line argument" : "-in",
        "data type" : "string",
        "extensions" : ["no extension"],
        "argument list" : {
          "use argument" : "--in",
          "mode" : "repeat argument"
        }
      }
    ],

    "outputs" : [
      {
        "description" : "the output BAM file.",
        "long form argument" : "--out",
        "short form argument" : "-o",
        "command line argument" : "-out",
        "required" : true,
        "data type" : "string",
        "extensions" : [".bam"],
        "if output to stream" : "do not include",
        "construct filename" : {
          "method": "from tool argument",
          "use argument" : "--in",
          "modify extension" : "replace",
          "modify text" : [
            {
              "add text" : ["_merged"]
            }
          ]
        }
      }
    ],

    "options" : [
      {
        "description" : "only read data from this genomic region.",
        "long form argument" : "--region",
        "short form argument" : "-r",
        "command line argument" : "-region",
        "extensions" : ["no extension"],
        "data type" : "string",
        "evaluate command" : {
          "command" : "$(TOOL_BIN)/genomicRegions/checkRegionFormat.sh ARG1 ARG2",
          "add values" : [
            {
              "ID" : "ARG1",
              "argument" : "--region"
            },
            {
              "ID" : "ARG2",
              "argument" : "tool"
            }
          ]
        }
      },
      {
        "description" : "A list of genomic regions to be applied with the --region argument. This option will lead to multiple freebayes calls in a single makefile.",
        "long form argument" : "--region-list-single",
        "short form argument" : "-rls",
        "command line argument" : "none",
        "extensions" : ["no extension"],
        "data type" : "string",
        "argument list" : {
          "use argument" : "--region",
          "mode" : "single makefile"
        }
      },
      {
        "description" : "A list of genomic regions to be applied with the --region argument. This option will lead to a single freebayes call in multiple makefiles.",
        "long form argument" : "--region-list-multiple",
        "short form argument" : "-rlm",
        "command line argument" : "none",
        "extensions" : ["no extension"],
        "data type" : "string",
        "argument list" : {
          "use argument" : "--region",
          "mode" : "multiple makefiles"
        }
      }
    ]
  },

  "instances" : [
    {
      "ID" : "default",
      "description" : "Default instance requires the users input for all files.",
      "nodes" : []
    },

    {
      "ID" : "test",
      "description" : "Instance for use with the test-harness.",
      "nodes" : [
        {
          "ID" : "BAM1",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome.bam", "$(RESOURCES)/tutorial/current/mutated_genome_set2.bam"],
          "argument" : "--in"
        },
        {
          "ID" : "output path",
          "values" : ["./"],
          "argument" : "--output-path"
        }
      ]
    }
  ]
}
