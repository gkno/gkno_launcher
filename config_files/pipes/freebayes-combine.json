{
  "description" : "Call variants and combine into a single vcf file.",

  "tasks" : {
    "call" : {
      "tool" : "freebayes"
    },
    "combine" : {
      "tool" : "vcflib-combine"
    }
  },

  "nodes" : [
    {
      "ID" : "bam",
      "description" : "The input BAM file.",
      "long form argument" : "--bam",
      "short form argument" : "-b",
      "tasks" : {
        "call" : "--bam"
      }
    },
    {
      "ID" : "bams",
      "description" : "The list of input BAM files.",
      "long form argument" : "--bam-list",
      "short form argument" : "-l",
      "tasks" : {
        "call" : "--bam-list"
      }
    },
    {
      "ID" : "ref",
      "description" : "The fasta reference.",
      "long form argument" : "--fasta-reference",
      "short form argument" : "-r",
      "tasks" : {
        "call" : "--fasta-reference"
      }
    },
    {
      "ID" : "region",
      "description" : "The genomic region for consideration.",
      "long form argument" : "--region",
      "short form argument" : "-rg",
      "required" : true,
      "tasks" : {
        "call" : "--region"
      }
    },
    {
      "ID" : "region single",
      "description" : "A list of regions to be analysed in a single makefile.",
      "long form argument" : "--region-list-single",
      "short form argument" : "-rls",
      "tasks" : {
        "call" : "--region-list-single"
      }
    },
    {
      "ID" : "regions",
      "description" : "A list of regions to be analysed in multiple makefiles.",
      "long form argument" : "--region-list-multiple",
      "short form argument" : "-rlm",
      "tasks" : {
        "call" : "--region-list-multiple"
      }
    },
    {
      "ID" : "output",
      "description" : "Combine vcf files generated by freebayes.",
      "tasks" : {
        "call" : "--vcf"
      },
      "greedy tasks" : {
        "combine" : "--in"
      },
      "delete files" : true
    }
  ],

  "instances" : [
    {
      "ID" : "default",
      "description" : "The default instance sets all the parameters for the pipeline to run.",
      "nodes" : [
      ]
    },

    {
      "ID" : "test",
      "description" : "Instance for use with the test-harness.",
      "nodes" : [
        {
          "ID" : "bam",
          "argument" : "--bam",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome.bam"]
        },
        {
          "ID" : "ref",
          "argument" : "--fasta-reference",
          "values" : ["$(RESOURCES)/tutorial/current/chr20_fragment_moblist.fa"]
        }
      ]
    }
  ]
}
