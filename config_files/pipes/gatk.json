{
  "id" : "gatk",
  "configuration type" : "pipeline",
  "description" : "Prepare the BAM file for the haplotype caller by realigning indels and recalibrating the base qualities and generate gvcf files for each sample.",
  "categories" : ["BAM-processing", "Variant-discovery"],

  "pipeline tasks" : [
    {
      "task" : "generate-gvcf",
      "pipeline" : "gatk-gvcf"
    },
    {
      "task" : "genotype",
      "pipeline" : "gatk-genotype"
    },
    {
      "task" : "vqsr",
      "pipeline" : "gatk-vqsr"
    }
  ],

  "arguments" : {
    "Inputs" : [
      {
        "description" : "The joint called VCF file to be recalibrated.",
        "long form argument" : "--in",
        "short form argument" : "-i",
        "node id" : "generate-gvcf.bam"
      },
      {
        "description" : "The reference FASTA file.",
        "long form argument" : "--fasta-reference",
        "short form argument" : "-r",
        "node id" : "reference"
      },
      {
        "description" : "A VCF file containing known variant alleles.",
        "long form argument" : "--known-sites",
        "short form argument" : "-k",
        "node id" : "generate-gvcf.known"
      },
      {
        "description" : "A VCF file(s) containing known variants that will be supplied to the base quality recalibration step alone.",
        "long form argument" : "--known-recalibration",
        "short form argument" : "-kr",
        "node id" : "generate-gvcf.known-for-recalibration"
      }
    ],

    "Outputs" : [
    ],

    "Options" : [
    ]
  },

  "unique graph nodes" : [
    {
      "id" : "reference",
      "task" : "generate-gvcf",
      "node id" : "reference"
    },
    {
      "id" : "genotype-gvcfs",
      "task" : "generate-gvcf",
      "node id" : "output"
    },
    {
      "id" : "joint-vcf",
      "task" : "genotype",
      "node id" : "out"
    }
  ],

  "connect nodes" : [
    {
      "source" : "reference",
      "target" : "genotype.reference"
    },
    {
      "source" : "reference",
      "target" : "vqsr",
      "node id" : "reference"
    },
    {
      "source" : "genotype-gvcfs",
      "target" : "genotype",
      "node id" : "gvcf"
    },
    {
      "source" : "joint-vcf",
      "target" : "vqsr",
      "node id" : "input"
    }
  ],

  "parameter sets" : [
    {
      "id" : "default",
      "description" : "Default parameter set requires user to input all input filenames.",
      "data" : [
      ]
    },

    {
      "id" : "test",
      "description" : "Test parameter set for the test harness.",
      "data" : [
        {
          "id" : "bam",
          "node" : "generate-gvcf.bam",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome.bam", "$(RESOURCES)/tutorial/current/mutated_genome_set2.bam"]
        },
        {
          "id" : "reference",
          "node" : "reference",
          "values" : ["$(RESOURCES)/tutorial/current/chr20_fragment.fa"]
        },
        {
          "id" : "known",
          "node" : "generate-gvcf.known",
          "values" : ["$(RESOURCES)/tutorial/current/Mills_and_1000G_gold_standard.indels.b37.chr20_fragment.vcf.gz"]
        },
        {
          "id" : "dbsnp",
          "node" : "generate-gvcf.known-for-recalibration",
          "values" : ["$(RESOURCES)/tutorial/current/dbsnp_138.b37.excluding_sites_after_129.chr20_fragment.vcf.gz"]
        }
      ]
    },

    {
      "id" : "human",
      "description" : "Human instance uses resources for the human genome.",
      "data" : [
        {
          "id" : "reference",
          "node" : "reference",
          "values" : ["$(RESOURCES)/homo_sapiens/current/human_reference_v37_decoys.fa"]
        },
        {
          "id" : "known",
          "node" : "generate-gvcf.known",
          "values" : ["$(RESOURCES)/homo_sapiens/current/Mills_and_1000G_gold_standard.indels.b37.vcf.gz"]
        },
        {
          "id" : "dbsnp",
          "node" : "generate-gvcf.known-for-recalibration",
          "values" : ["$(RESOURCES)/homo_sapiens/current/dbsnp_138.b37.excluding_sites_after_129.vcf.gz"]
        }
      ]
    }
  ]
}
