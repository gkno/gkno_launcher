{
  "id" : "freebayes",
  "configuration type" : "pipeline",
  "description" : "run freebayes",
  "categories" : ["Variant-discovery"],

  "pipeline tasks" : [
    {
      "task" : "call",
      "tool" : "freebayes",
      "greedy argument" : "--in",
      "output to stream" : true
    },
    {
      "task" : "compress",
      "tool" : "bgzip-stream",
      "input is stream" : true
    },
    {
      "task" : "index",
      "tool" : "vcf-index",
      "omit from reduced plot" : true
    }
  ],

  "import arguments" : "call",

  "arguments" : {
  },

  "unique graph nodes" : [
    {
      "id" : "bam",
      "task" : "call",
      "task argument" : "--in"
    },
    {
      "id" : "reference",
      "task" : "call",
      "task argument" : "--fasta-reference"
    },
    {
      "id" : "region",
      "task" : "call",
      "task argument" : "--region"
    }
  ],

  "shared graph nodes" : [
    {
      "id" : "out",
      "arguments sharing node" : [
        {
          "task" : "call",
          "task argument" : "--out"
        },
        {
          "task" : "compress",
          "task argument" : "--in"
        }
      ]
    },
    {
      "id" : "index-vcf",
      "arguments sharing node" : [
        {
          "task" : "compress",
          "task argument" : "--out"
        },
        {
          "task" : "index",
          "task argument" : "--in"
        }
      ]
    }
  ],

  "parameter sets" : [
    {
      "id" : "default",
      "description" : "Default parameter set requires user to input all input filenames.",
      "data" : []
    },

    {
      "id" : "test",
      "description" : "Test parameter set for the test harness.",
      "data" : [
        {
          "id" : "bam",
          "node" : "bam",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome.bam"]
        },
        {
          "id" : "reference",
          "node" : "reference",
          "values" : ["$(RESOURCES)/tutorial/current/chr20_fragment.fa"]
        }
      ]
    }
  ]
}
