{
  "id" : "call",
  "configuration type" : "pipeline",
  "description" : "Feed a merged region of alignments to freebayes and compress the output VCF file.",
  "categories" : ["Variant-discovery"],

  "pipeline tasks" : [
    {
      "task" : "call",
      "tool" : "freebayes",
      "greedy argument" : "--in"
    },
    {
      "task" : "combine-vcf",
      "tool" : "vcf-combine",
      "omit from reduced plot" : true
    },
    {
      "task" : "compress-vcf",
      "tool" : "bgzip-stream",
      "omit from reduced plot" : true
    },
    {
      "task" : "index-vcf",
      "tool" : "vcf-index",
      "omit from reduced plot" : true
    }
  ],

  "arguments" : {
    "Inputs" : [
      {
        "description" : "The input BAM file(s).",
        "long form argument" : "--in",
        "short form argument" : "-i",
        "node id" : "bam"
      },
      {
        "description" : "The reference FASTA file.",
        "long form argument" : "--fasta-reference",
        "short form argument" : "-r",
        "node id" : "reference"
      }
    ],

    "Outputs" : [
      {
        "description" : "The output VCF file.",
        "long form argument" : "--out",
        "short form argument" : "-o",
        "node id" : "compress"
      }
    ],

    "Options" : [
      {
        "description" : "The genomic region.",
        "long form argument" : "--region",
        "short form argument" : "-rg",
        "node id" : "region"
      }
    ]
  },

  "unique graph nodes" : [
    {
      "id" : "bam",
      "task" : "call",
      "task argument" : "--in"
    },
    {
      "id" : "region",
      "task" : "call",
      "task argument" : "--region"
    },
    {
      "id" : "reference",
      "task" : "call",
      "task argument" : "--fasta-reference"
    }
  ],

  "shared graph nodes" : [
    {
      "id" : "combine",
      "delete files" : true,
      "arguments sharing node" : [
        {
          "task" : "call",
          "task argument" : "-o"
        },
        {
          "task" : "combine-vcf",
          "task argument" : "--in"
        }
      ]
    },
    {
      "id" : "compress",
      "delete files" : true,
      "arguments sharing node" : [
        {
          "task" : "combine-vcf",
          "task argument" : "-o"
        },
        {
          "task" : "compress-vcf",
          "task argument" : "--in"
        }
      ]
    },
    {
      "id" : "index",
      "arguments sharing node" : [
        {
          "task" : "compress-vcf",
          "task argument" : "-o"
        },
        {
          "task" : "index-vcf",
          "task argument" : "--in"
        }
      ]
    }
  ],

  "parameter sets" : [
    {
      "id" : "default",
      "description" : "Default parameter set requires user to input all input filenames.",
      "data" : [
        {
          "id" : "region",
          "node" : "region",
          "values" : [20]
        }
      ]
    },

    {
      "id" : "test",
      "description" : "Test parameter set for the test harness.",
      "data" : [
        {
          "id" : "bam",
          "node" : "bam",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome.bam", "$(RESOURCES)/tutorial/current/mutated_genome_set2.bam"]
        },
        {
          "id" : "reference",
          "node" : "reference",
          "values" : ["$(RESOURCES)/tutorial/current/chr20_fragment.fa"]
        }
      ]
    }
  ]
}
