{
  "description" : "Call short variants using freebayes.",
  "categories" : ["Variant-discovery"],

  "tasks" : {
    "merge" : {
      "tool" : "bamtools-merge",
      "output to stream" : true
    },
    "extend-gaps" : {
      "tool" : "ogap",
      "output to stream" : true
    },
    "call" : {
      "tool" : "freebayes"
    },
    "combine" : {
      "tool" : "vcf-combine",
      "output to stream" : true
    },
    "compress" : {
      "tool" : "gzip-delete"
    }
  },

  "nodes" : [
    {
      "ID" : "bam",
      "description" : "The input BAM file.",
      "long form argument" : "--bam",
      "short form argument" : "-b",
      "tasks" : {
        "merge" : "--in"
      }
    },
    {
      "ID" : "region",
      "description" : "The genomic region for consideration.",
      "long form argument" : "--region",
      "short form argument" : "-rg",
      "required" : true,
      "tasks" : {
        "merge" : "--region"
      }
    },
    {
      "ID" : "extend",
      "description" : "Run the bam file through ogap.",
      "tasks" : {
        "merge" : "--out",
        "extend-gaps" : "--bam"
      }
    },
    {
      "ID" : "ref",
      "description" : "The fasta reference.",
      "long form argument" : "--fasta-reference",
      "short form argument" : "-r",
      "tasks" : {
        "extend-gaps" : "--fasta-reference",
        "call" : "--fasta-reference"
      }
    },
    {
      "ID" : "call",
      "description" : "Call variants on the bam file.",
      "tasks" : {
        "extend-gaps" : "--out",
        "call" : "--bam"
      }
    },
    {
      "ID" : "output",
      "description" : "Combine vcf files generated by freebayes.",
      "tasks" : {
        "call" : "--vcf"
      },
      "greedy tasks" : {
        "combine" : "--in"
      },
      "delete files" : true
    },
    {
      "ID" : "compress",
      "description" : "Compress the final vcf file.",
      "tasks" : {
        "combine" : "--out",
        "compress" : "--in"
      }
    }
  ],

  "parameter sets" : [
    {
      "ID" : "default",
      "description" : "The default parameter set sets all the parameters for the pipeline to run.",
      "nodes" : [
      ]
    },

    {
      "ID" : "test",
      "description" : "Parameter set for use with the test-harness.",
      "nodes" : [
        {
          "ID" : "bam",
          "argument" : "--bam",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome.bam", "$(RESOURCES)/tutorial/current/mutated_genome_set2.bam"]
        },
        {
          "ID" : "ref",
          "argument" : "--fasta-reference",
          "values" : ["$(RESOURCES)/tutorial/current/chr20_fragment_moblist.fa"]
        },
        {
          "ID" : "region",
          "argument" : "--region",
          "values" : [20]
        }
      ]
    }
  ]
}
