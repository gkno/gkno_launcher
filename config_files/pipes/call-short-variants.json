{
  "description" : "Call short variants using freebayes.",
  "categories" : ["Variant-discovery"],

  "tasks" : {
    "merge" : {
      "tool" : "bamtools-merge",
      "output to stream" : true
    },
    "call" : {
      "tool" : "freebayes"
    },
    "combine" : {
      "tool" : "vcf-combine-uncompressed",
      "output to stream" : true
    },
    "compress" : {
      "tool" : "bgzip-stream"
    },
    "index" : {
      "tool" : "tabix-index-vcf"
    }
  },

  "nodes" : [
    {
      "ID" : "bam",
      "description" : "The input BAM file.",
      "long form argument" : "--in",
      "short form argument" : "-i",
      "tasks" : {
        "merge" : "--in"
      }
    },
    {
      "ID" : "region",
      "description" : "The genomic region for consideration.",
      "long form argument" : "--region",
      "short form argument" : "-rg",
      "required" : true,
      "tasks" : {
        "merge" : "--region"
      }
    },
    {
      "ID" : "ref",
      "description" : "The fasta reference.",
      "long form argument" : "--fasta-reference",
      "short form argument" : "-r",
      "tasks" : {
        "call" : "--fasta-reference"
      }
    },
    {
      "ID" : "call",
      "description" : "Call variants on the bam file.",
      "tasks" : {
        "merge" : "--out",
        "call" : "--in"
      }
    },
    {
      "ID" : "duplicates",
      "long form argument" : "--use-duplicate-reads",
      "short form argument" : "-ud",
      "description" : "Use duplicate reads when calling short variants.",
      "tasks" : {
        "call" : "--use-duplicate-reads"
      }
    },
    {
      "ID" : "output",
      "description" : "Combine vcf files generated by freebayes.",
      "tasks" : {
        "call" : "--out"
      },
      "greedy tasks" : {
        "combine" : "--in"
      },
      "delete files" : true
    },
    {
      "ID" : "compress",
      "description" : "Compress the final vcf file.",
      "long form argument" : "--out",
      "short form argument" : "-o",
      "tasks" : {
        "combine" : "--out",
        "compress" : "--in"
      }
    },
    {
      "ID" : "index",
      "description" : "Index the final vcf file.",
      "tasks" : {
        "compress" : "--out",
        "index" : "--in"
      }
    }
  ],

  "parameter sets" : [
    {
      "ID" : "default",
      "description" : "The default parameter set sets all the parameters for the pipeline to run.",
      "nodes" : [
      ]
    },

    {
      "ID" : "test",
      "description" : "Parameter set for use with the test-harness.",
      "nodes" : [
        {
          "ID" : "bam",
          "argument" : "--in",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome.bam", "$(RESOURCES)/tutorial/current/mutated_genome_set2.bam"]
        },
        {
          "ID" : "ref",
          "argument" : "--fasta-reference",
          "values" : ["$(RESOURCES)/tutorial/current/chr20_fragment_moblist.fa"]
        },
        {
          "ID" : "region",
          "argument" : "--region",
          "values" : [20]
        }
      ]
    },

    {
      "ID" : "human",
      "description" : "The parameter set for the human genome.",
      "nodes" : [
        {
          "ID" : "ref",
          "argument" : "--fasta-reference",
          "values" : ["$(RESOURCES)/homo_sapiens/current/human_reference_v37_decoys.fa"]
        }
      ]
    }
  ]
}
