{
  "description" : "Add tags expected by Tangram to BAM files generated by aligners other than Mosaik, then call MEIs.",
  "help group" : "MEI processing",

  "tasks" : {
    "convert" : {
      "tool" : "tangram-bam"
    },
    "sort" : {
      "tool" : "bamtools-sort"
    },
    "index" : {
      "tool" : "bamtools-index"
    },
    "generate-bam-list" : {
      "tool" : "generate-file-list"
    },
    "scan-bam-files" : {
      "tool" : "tangram-scan"
    },
    "detect-mei" : {
      "tool" : "tangram-detect"
    },
    "combine" : {
      "tool" : "vcf-combine"
    }
  },

  "nodes" : [
    {
      "ID" : "fasta",
      "description" : "The mobile element fasta file.",
      "long form argument" : "--mobile-element-fasta",
      "short form argument" : "-m",
      "tasks" : {
        "convert" : "--special-reference"
      }
    },
    {
      "ID" : "bam",
      "description" : "The input BAM file.",
      "long form argument" : "--bam",
      "short form argument" : "-b",
      "tasks" : {
        "convert" : "--bam"
      }
    },
        {
      "ID" : "bam list s",
      "description" : "A list of input BAM files to process in a single makefile.",
      "long form argument" : "--bam-list-single",
      "short form argument" : "-bls",
      "tasks" : {
        "convert" : "--bam-list-single"
      }
    },
    {
      "ID" : "bam list m",
      "description" : "A list of input BAM files to process in a single makefile.",
      "long form argument" : "--bam-list-multiple",
      "short form argument" : "-blm",
      "tasks" : {
        "convert" : "--bam-list-multiple"
      }
    },
    {
      "ID" : "chromosome",
      "description" : "The chromosome to process.",
      "long form argument" : "--chromosome",
      "short form argument" : "-c",
      "tasks" : {
        "convert" : "--region"
      }
    },
    {
      "ID" : "sort",
      "description" : "The bam file to sort.",
      "tasks" : {
        "convert" : "--out",
        "sort" : "--in"
      },
      "delete files" : true
    },
    {
      "ID" : "index",
      "description" : "Index sorted bam.",
      "tasks" : {
        "sort" : "--out",
        "index" : "--in"
      },
      "greedy tasks" : {
        "generate-bam-list" : "--in"
      }
    },
    {
      "ID" : "scan",
      "description" : "The list of bam files in which to call MEIs.",
      "long form argument" : "--bam-list",
      "short form argument" : "-bl",
      "required" : true,
      "tasks" : {
        "generate-bam-list" : "--out",
        "scan-bam-files" : "--in-list",
        "detect-mei" : "--in-list"
      }
    },
    {
      "ID" : "tangram directory",
      "description" : "The output directory for Tangram files.",
      "long form argument" : "--tangram-directory",
      "short form argument" : "-td",
      "required" : true,
      "tasks" : {
        "scan-bam-files" : "--output-directory"
      }
    },
    {
      "ID" : "fragments",
      "description" : "The minimum number of normal fragments in a library.",
      "long form argument" : "--minimum-fragments",
      "short form argument" : "-mfr",
      "tasks" : {
        "scan-bam-files" : "--minimum-fragments"
      }
    },
    {
      "ID" : "library file",
      "description" : "Library information file (generated by tangram-scan).",
      "long form argument" : "--library-file",
      "short form argument" : "-l",
      "tasks" : {
        "scan-bam-files" : "--library-file",
        "detect-mei" : "--library-file"
      }
    },
    {
      "ID" : "histogram file",
      "description" : "Fragment length distribution information file (generated by tangram-scan).",
      "long form argument" : "--histogram-file",
      "short form argument" : "-ht",
      "tasks" : {
        "scan-bam-files" : "--histogram-file",
        "detect-mei" : "--histogram-file"
      }
    },
    {
      "ID" : "region",
      "description" : "Genomic region.",
      "long form argument" : "--region",
      "short form argument" : "-rg",
      "tasks" : {
        "detect-mei" : "--region"
      }
    },
    {
      "ID" : "region single",
      "description" : "A list of regions to be analysed (single makefile).",
      "long form argument" : "--region-list-single",
      "short form argument" : "-rls",
      "tasks" : {
        "detect-mei" : "--region-list-single"
      }
    },
    {
      "ID" : "region list multiple",
      "description" : "A list of regions to be analysed (multiple makefiles).",
      "long form argument" : "--region-list-multiple",
      "short form argument" : "-rlm",
      "tasks" : {
        "detect-mei" : "--region-list-multiple"
      }
    },
    {
      "ID" : "vcf",
      "description" : "Output MEIs.",
      "long form argument" : "--vcf",
      "short form argument" : "-v",
      "tasks" : {
        "detect-mei" : "--vcf"
      }
    },
    {
      "ID" : "combine",
      "description" : "Combine vcf files generated by freebayes.",
      "tasks" : {
        "detect-mei" : "--vcf"
      },
      "greedy tasks" : {
        "combine" : "--in"
      },
      "delete files" : true
    }
  ],

  "parameter sets" : [
    {
      "ID" : "default",
      "description" : "Default parameter set requires user to input all input filenames.",
      "nodes" : [
        {
          "ID" : "directory",
          "argument" : "--tangram-directory",
          "values" : ["tangram_files"]
        },
        {
          "ID" : "bam list",
          "argument" : "--bam-list",
          "values" : ["bam_list.txt"]
        }
      ]
    },

    {
      "ID" : "test",
      "description" : "Parameters assuming illumina sequencing of a human genome",
      "nodes" : [
        {
          "ID" : "moblist",
          "argument" : "--mobile-element-fasta",
          "values" : ["$(RESOURCES)/tutorial/current/mobile_element_sequences.fa"]
        },
        {
          "ID" : "bam",
          "argument" : "--bam",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome.bam"]
        },
        {
          "ID" : "region",
          "argument" : "--region",
          "values" : [20]
        }
      ]
    }
  ]
}
