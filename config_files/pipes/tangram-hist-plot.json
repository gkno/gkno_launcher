{
  "description" : "Generate histogram of Tangram fragment length distribution.",

  "tasks" : {
    "convert-to-json" : {
      "tool" : "tangram-convert-hist",
      "output to stream" : true
    },
    "convert-to-tab" : {
      "tool" : "tangram-hist"
    },
    "plot" : {
      "tool" : "r-plot"
    }
  },

  "nodes" : [
    {
      "ID" : "input",
      "description" : "The input binary histogram file.",
      "long form argument" : "--in",
      "short form argument" : "-i",
      "tasks" : {
        "convert-to-json" : "--in"
      }
    },
    {
      "ID" : "tab",
      "description" : "Convert the json file to tab delimited file.",
      "tasks" : {
        "convert-to-json" : "--out",
        "convert-to-tab" : "--in"
      },
      "delete files" : true
    },
    {
      "ID" : "output",
      "description" : "The output tab-delimited file.",
      "long form argument" : "--out",
      "short form argument" : "-o",
      "tasks" : {
        "convert-to-tab" : "--out",
        "plot" : "--in"
      }
    },
    {
      "ID" : "plot",
      "description" : "Plot the tab delimited file with R.",
      "long form argument" : "--r-script",
      "short form argument" : "-r",
      "tasks" : {
        "plot" : "--script"
      }
    }
  ],

  "instances" : [
    {
      "ID" : "default",
      "description" : "The default instance sets all the parameters for the pipeline to run.",
      "nodes" : [
        {
          "ID" : "r script",
          "argument" : "--r-script",
          "values" : ["$(TOOL_BIN)/R/tangram-fragment-length.r"]
        }
      ]
    },

    {
      "ID" : "test",
      "description" : "Instance for use with the test-harness.",
      "nodes" : [
        {
          "ID" : "in",
          "argument" : "--in",
          "values" : ["$(RESOURCES)/tutorial/current/tangram-files/hist.dat"]
        }
      ]
    }
  ]
}
