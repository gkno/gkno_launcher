{
  "id" : "tangram-bam",
  "configuration type" : "pipeline",
  "description" : "Add tags expected by Tangram to BAM files generated by aligners other than Mosaik.",
  "categories" : ["BAM-processing"],

  "pipeline tasks" : [
    {
      "task" : "convert",
      "tool" : "tangram-bam"
    },
    {
      "task" : "sort",
      "tool" : "bamtools-sort"
    },
    {
      "task" : "index",
      "tool" : "bamtools-index"
    }
  ],

  "arguments" : {
    "Inputs" : [
      {
        "description" : "The input BAM file.",
        "long form argument" : "--in",
        "short form argument" : "-i",
        "node id" : "input"
      },
      {
        "description" : "The mobile element fasta file.",
        "long form argument" : "--mobile-element-fasta",
        "short form argument" : "-m",
        "node id" : "moblist"
      }
    ],

    "Outputs" : [
      {
        "description" : "The output BAM file.",
        "long form argument" : "--out",
        "short form argument" : "-o",
        "node id" : "sort-index"
      }
    ],

    "Options" : [
      {
        "description" : "The genomic region to consider (whole genome or chromosome recommended).",
        "long form argument" : "--region",
        "short form argument" : "-rg",
        "node id" : "region"
      }
    ]
  },

  "unique graph nodes" : [
    {
      "id" : "input",
      "task" : "convert",
      "task argument" : "--in"
    },
    {
      "id" : "moblist",
      "task" : "convert",
      "task argument" : "--special-reference"
    },
    {
      "id" : "region",
      "task" : "convert",
      "task argument" : "--region"
    }
  ],

  "shared graph nodes" : [
    {
      "id" : "convert-sort",
      "delete files" : true,
      "arguments sharing node" : [
        {
          "task" : "convert",
          "task argument" : "--out"
        },
        {
          "task" : "sort",
          "task argument" : "--in"
        }
      ]
    },
    {
      "id" : "sort-index",
      "arguments sharing node" : [
        {
          "task" : "sort",
          "task argument" : "--out"
        },
        {
          "task" : "index",
          "task argument" : "--in"
        }
      ]
    }
  ],

  "parameter sets" : [
    {
      "id" : "default",
      "description" : "Default parameter set requires user to input all input filenames.",
      "data" : []
    },

    {
      "id" : "test",
      "description" : "Parameters assuming illumina sequencing of a human genome",
      "data" : [
        {
          "id" : "moblist",
          "node" : "moblist",
          "values" : ["$(RESOURCES)/tutorial/current/mobile_element_sequences.fa"]
        },
        {
          "id" : "bam",
          "node" : "input",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome.bam", "$(RESOURCES)/tutorial/current/mutated_genome_set2.bam"]
        },
        {
          "id" : "region",
          "node" : "region",
          "values" : [20]
        }
      ]
    }
  ]
}
