{
  "id" : "minimal-vcf",
  "configuration type" : "pipeline",
  "description" : "Strip all input VCF files to a minimal representation, e.g. no genotypes and reserved INFO fields. Finally union all VCF files to generate a single VCF files.",
  "categories" : ["VCF-processing"],

  "pipeline tasks" : [
    {
      "task" : "minimise",
      "tool" : "vt-view"
    },
    {
      "task" : "index",
      "tool" : "vcf-index",
      "omit from reduced plot" : true
    },
    {
      "task" : "info",
      "tool" : "vcf-keep-info"
    },
    {
      "task" : "combine",
      "tool" : "vcf-combine"
    }
  ],

  "arguments" : {
    "Inputs" : [
      {
        "description" : "Input VCF files.",
        "long form argument" : "--in",
        "short form argument" : "-i",
        "node id" : "vcf"
      }
    ],

    "Outputs" : [
    ],

    "Options" : [
      {
        "description" : "Output sites only VCF file.",
        "long form argument" : "--sites-only",
        "short form argument" : "-s",
        "node id" : "sites"
      },
      {
        "description" : "Remove all VCF INFO fields except those specified with this argument.",
        "long form argument" : "--info",
        "short form argument" : "-n",
        "node id" : "keep-info"
      }
    ]
  },

  "unique graph nodes" : [
    {
      "id" : "vcf",
      "task" : "minimise",
      "task argument" : "--in"
    },
    {
      "id" : "sites",
      "task" : "minimise",
      "task argument" : "--sites-only"
    },
    {
      "id" : "keep-info",
      "task" : "info",
      "task argument" : "--info"
    }
  ],

  "shared graph nodes" : [
    {
      "id" : "index-vcf",
      "arguments sharing node" : [
        {
          "task" : "minimise",
          "task argument" : "--out"
        },
        {
          "task" : "index",
          "task argument" : "--in"
        },
        {
          "task" : "info",
          "task argument" : "--in"
        }
      ]
    },
    {
      "id" : "pass-index",
      "arguments sharing node" : [
        {
          "task" : "index",
          "task argument" : "--out"
        },
        {
          "task" : "info",
          "task argument" : "--index"
        }
      ]
    },
    {
      "id" : "out",
      "arguments sharing node" : [
        {
          "task" : "info",
          "task argument" : "--out"
        },
        {
          "task" : "combine",
          "task argument" : "--in",
          "is greedy" : true
        }
      ]
    }
  ],

  "parameter sets" : [
    {
      "id" : "default",
      "description" : "Default parameter set requires user to input all input filenames.",
      "data" : [
        {
          "id" : "sites",
          "node" : "sites",
          "values" : ["set"]
        },
        {
          "id" : "info",
          "node" : "keep-info",
          "values" : ["AA", "AC", "AF", "AN", "BQ", "CIGAR", "DB", "DP", "END", "H2", "H3", "MQ", "MQ0", "NS", "SB", "SOMATIC", "VALIDATED", "1000G"]
        }
      ]
    },

    {
      "id" : "test",
      "description" : "Test parameter set for the test harness.",
      "data" : [
        {
          "id" : "vcf",
          "node" : "vcf",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome.vcf.gz", "$(RESOURCES)/tutorial/current/mutated_genome.meis.vcf.gz"]
        }
      ]
    }
  ]
}
