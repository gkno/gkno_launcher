{
  "description" : "Starting from fasta and fastq files, prepare MOSAIK reference files, align reads and search for mobile element insertions (MEIs).",
  "help group" : "MEI pipelines",

  "tasks" : {
    "generate-regions" : {
      "tool" : "generate-region-windows"
    },
    "detect-mei" : {
      "tool" : "tangram-detect"
    }
  },

  "nodes" : [
    {
      "ID" : "chromosome",
      "description" : "The chromosome.",
      "long form argument" : "--chromosome",
      "short form argument" : "-c",
      "tasks" : {
        "generate-regions" : "--chromosome"
      }
    },
    {
      "ID" : "coordinate list",
      "description" : "The list of coordinates to build windows around.",
      "long form argument" : "--coordinate-list-test",
      "short form argument" : "-l",
      "tasks" : {
        "generate-regions" : "--coordinate-list"
      }
    },
    {
      "ID" : "minimum",
      "description" : "The value to subtract from the coordinate to define the minimum coordinate of the window ([coordinate - minimum] < window < coordinate + maximum]).",
      "long form argument" : "--minimum",
      "short form argument" : "-m",
      "tasks" : {
        "generate-regions" : "--minimum"
      }
    },
    {
      "ID" : "maximum",
      "description" : "The value to add to the coordinate to define the maximum coordinate of the window ([coordinate - minimum] < window < coordinate + maximum]).",
      "long form argument" : "--maximum",
      "short form argument" : "-x",
      "tasks" : {
        "generate-regions" : "--maximum"
      }
    },
    {
      "ID" : "region",
      "description" : "Genomic region.",
      "long form argument" : "--region-list",
      "short form argument" : "-rl",
      "tasks" : {
        "generate-regions" : "--out",
        "detect-mei" : "--region-list-single"
      }
    },
    {
      "ID" : "tangram reference",
      "description" : "The reference file created by Tangram index.",
      "long form argument" : "--tangram-reference",
      "short form argument" : "-tr",
      "tasks" : {
        "detect-mei" : "--tangram-reference"
      }
    },
    {
      "ID" : "scan",
      "description" : "The number of hashes for the mobile element reference sequences.",
      "long form argument" : "--bam-list",
      "short form argument" : "-bl",
      "required" : true,
      "tasks" : {
        "detect-mei" : "--in-list"
      }
    },
    {
      "ID" : "library file",
      "description" : "Library information file (generated by tangram-scan).",
      "long form argument" : "--library-file",
      "short form argument" : "-lf",
      "tasks" : {
        "detect-mei" : "--library-file"
      }
    },
    {
      "ID" : "histogram file",
      "description" : "Fragment length distribution information file (generated by tangram-scan).",
      "long form argument" : "--histogram-file",
      "short form argument" : "-hf",
      "tasks" : {
        "detect-mei" : "--histogram-file"
      }
    },
    {
      "ID" : "vcf",
      "description" : "Output MEIs.",
      "long form argument" : "--vcf",
      "short form argument" : "-v",
      "tasks" : {
        "detect-mei" : "--vcf"
      }
    }
  ],

  "parameter sets" : [
    {
      "ID" : "default",
      "description" : "Default parameter set requires user to input all input filenames.",
      "nodes" : [
      ]
    },

    {
      "ID" : "illumina",
      "description" : "Parameters assuming illumina sequencing of a human genome",
      "nodes" : [
      ]
    },

    {
      "ID" : "test",
      "description" : "Test parameter set for the test harness.",
      "nodes" : [
      ]
    }
  ]
}
