{
  "description" : "Call variants and combine into a single vcf file.",
  "categories" : ["Variant-discovery"],

  "tasks" : {
    "call" : {
      "tool" : "wham-bam"
    },
    "combine" : {
      "tool" : "vcf-combine-uncompressed",
      "output to stream" : true
    },
    "compress" : {
      "tool" : "bgzip-stream"
    },
    "index" : {
      "tool" : "tabix-index-vcf"
    }
  },

  "nodes" : [
    {
      "ID" : "bam",
      "description" : "The input (case) BAM file(s).",
      "long form argument" : "--in",
      "short form argument" : "-i",
      "tasks" : {
        "call" : "--in"
      }
    },
    {
      "ID" : "background",
      "description" : "Background (control) BAM files.",
      "long form argument" : "--background-bams",
      "short form argument" : "-b",
      "tasks" : {
        "call" : "--background-bams"
      }
    },
    {
      "ID" : "bed",
      "description" : "A BED file defining regions to score.",
      "long form argument" : "--bed",
      "short form argument" : "-s",
      "tasks" : {
        "call" : "--bed"
      }
    },
    {
      "ID" : "region",
      "description" : "The genomic region for consideration.",
      "long form argument" : "--region",
      "short form argument" : "-rg",
      "required" : true,
      "tasks" : {
        "call" : "--region"
      }
    },
    {
      "ID" : "threads",
      "description" : "Use the specified number of threads.",
      "long form argument" : "--threads",
      "short form argument" : "-t",
      "tasks" : {
        "call" : "--threads"
      }
    },
    {
      "ID" : "output",
      "description" : "Combine vcf files generated by freebayes.",
      "tasks" : {
        "call" : "--out"
      },
      "greedy tasks" : {
        "combine" : "--in"
      },
      "delete files" : true
    },
    {
      "ID" : "compress",
      "description" : "Compress the VCF file.",
      "long form argument" : "--out",
      "short form argument" : "-o",
      "tasks" : {
        "combine" : "--out",
        "compress" : "--in"
      },
      "delete files" : true
    },
    {
      "ID" : "index",
      "description" : "Index the VCF file.",
      "tasks" : {
        "compress" : "--out",
        "index" : "--in"
      }
    }
  ],

  "parameter sets" : [
    {
      "ID" : "default",
      "description" : "The default parameter set sets all the parameters for the pipeline to run.",
      "nodes" : [
      ]
    },

    {
      "ID" : "test",
      "description" : "Parameter set for use with the test-harness.",
      "nodes" : [
        {
          "ID" : "bam",
          "argument" : "--in",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome.bam"]
        }
      ]
    },

    {
      "ID" : "human",
      "description" : "Parameter set for the human genome.",
      "nodes" : [
      ]
    }
  ]
}
