{
  "id" : "standardize-vcf",
  "configuration type" : "pipeline",
  "description" : "Standardize a VCF file. This involves steps including normalization of variants, removing duplicates etc.",
  "categories" : ["VCF-processing"],

  "pipeline tasks" : [
    {
      "task" : "decompose",
      "tool" : "vt-decompose",
      "output to stream" : true
    },
    {
      "task" : "normalize",
      "tool" : "vt-normalize",
      "input is stream" : true,
      "output to stream" : true
    },
    {
      "task" : "subset",
      "tool" : "vt-subset",
      "input is stream" : true,
      "output to stream" : true
    },
    {
      "task" : "remove-duplicates",
      "tool" : "vt-unique",
      "input is stream" : true
    },
    {
      "task" : "index-precombined",
      "tool" : "vcf-index"
    },
    {
      "task" : "combine-vcf",
      "tool" : "vcf-combine",
      "consolidate divisions" : true,
      "omit from reduced plot" : true,
      "output to stream" : true
    },
    {
      "task" : "compress",
      "tool" : "bgzip-stream",
      "input is stream" : true,
      "omit from reduced plot" : true
    },
    {
      "task" : "index",
      "tool" : "vcf-index",
      "omit from reduced plot" : true
    }
  ],

  "arguments" : {
    "Inputs" : [
      {
        "description" : "The input sorted VCF file.",
        "long form argument" : "--in",
        "short form argument" : "-i",
        "node id" : "input"
      },
      {
        "description" : "The reference FASTA file.",
        "long form argument" : "--fasta-reference",
        "short form argument" : "-r",
        "node id" : "reference"
      },
      {
        "description" : "A text file containing a list of samples on which to subset.",
        "long form argument" : "--samples-files",
        "short form argument" : "-s",
        "node id" : "samples"
      }
    ],

    "Outputs" : [
      {
        "description" : "The output standardized VCF file.",
        "long form argument" : "--out",
        "short form argument" : "-o",
        "node id" : "output"
      }
    ],

    "Options" : [
      {
        "description" : "The genomic region to analyse.",
        "long form argument" : "--region",
        "short form argument" : "-rg",
        "node id" : "region"
      }
    ]
  },

  "unique graph nodes" : [
    {
      "id" : "input",
      "task" : "decompose",
      "task argument" : "--in"
    },
    {
      "id" : "reference",
      "task" : "normalize",
      "task argument" : "--fasta-reference"
    },
    {
      "id" : "samples",
      "task" : "subset",
      "task argument" : "--samples-file"
    },
    {
      "id" : "region",
      "task" : "decompose",
      "task argument" : "--region"
    }
  ],

  "shared graph nodes" : [
    {
      "id" : "decomposed-vcf",
      "arguments sharing node" : [
        {
          "task" : "decompose",
          "task argument" : "--out"
        },
        {
          "task" : "normalize",
          "task argument" : "--in"
        }
      ]
    },
    {
      "id" : "normalized-vcf",
      "arguments sharing node" : [
        {
          "task" : "normalize",
          "task argument" : "--out"
        },
        {
          "task" : "subset",
          "task argument" : "--in"
        }
      ]
    },
    {
      "id" : "subsetted-vcf",
      "arguments sharing node" : [
        {
          "task" : "subset",
          "task argument" : "--out"
        },
        {
          "task" : "remove-duplicates",
          "task argument" : "--in"
        }
      ]
    },
    {
      "id" : "unique-vcf",
      "delete files" : true,
      "arguments sharing node" : [
        {
          "task" : "remove-duplicates",
          "task argument" : "--out"
        },
        {
          "task" : "index-precombined",
          "task argument" : "--in"
        },
        {
          "task" : "combine-vcf",
          "task argument" : "--in"
        }
      ]
    },
    {
      "id" : "precombined-index",
      "delete files" : true,
      "arguments sharing node" : [
        {
          "task" : "index-precombined",
          "task argument" : "--out"
        },
        {
          "task" : "combine-vcf",
          "task argument" : "--index"
        }
      ]
    },
    {
      "id" : "combined-vcf",
      "arguments sharing node" : [
        {
          "task" : "combine-vcf",
          "task argument" : "--out"
        },
        {
          "task" : "compress",
          "task argument" : "--in"
        }
      ]
    },
    {
      "id" : "output",
      "arguments sharing node" : [
        {
          "task" : "compress",
          "task argument" : "--out"
        },
        {
          "task" : "index",
          "task argument" : "--in"
        }
      ]
    }
  ],

  "parameter sets" : [
    {
      "id" : "default",
      "description" : "Default parameter set requires user to input all input filenames.",
      "data" : [
      ]
    },

    {
      "id" : "test",
      "description" : "Test parameter set for the test harness.",
      "data" : [
        {
          "id" : "vcf",
          "node" : "input",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome.vcf.gz"]
        },
        {
          "id" : "output",
          "node" : "output",
          "values" : ["test.vcf.gz"]
        },
        {
          "id" : "reference",
          "node" : "reference",
          "values" : ["$(RESOURCES)/tutorial/current/chr20_fragment.fa"]
        },
        {
          "id" : "samples",
          "node" : "samples",
          "values" : ["$(RESOURCES)/tutorial/current/sample.txt"]
        },
        {
          "id" : "region",
          "node" : "region",
          "values" : ["20:1-50000", "20:50000-100000"]
        }
      ]
    },

    {
      "id" : "human",
      "description" : "Parameter set for human.",
      "data" : [
        {
          "id" : "reference",
          "node" : "reference",
          "values" : ["$(RESOURCES)/homo_sapiens/current/human_reference_v37_decoys.fa"]
        }
      ]
    }
  ]
}
