{
  "id" : "vcf-rufus",
  "configuration type" : "pipeline",
  "description" : "Prepare a VCF file generated by Rufus for merging.",
  "categories" : ["VCF-processing"],

  "pipeline tasks" : [
    {
      "task" : "header",
      "tool" : "vcf-header"
    },
    {
      "task" : "last-line",
      "tool" : "strip-last-line"
    },
    {
      "task" : "add-sample-name",
      "tool" : "add-sample"
    },
    {
      "task" : "replace-header",
      "tool" : "vcf-fix-rufus"
    },
    {
      "task" : "sort",
      "tool" : "vt-sort",
      "output to stream" : true
    },
    {
      "task" : "unique",
      "tool" : "vt-unique",
      "input is stream" : true
    },
    {
      "task" : "index",
      "tool" : "vcf-index"
    }
  ],

  "arguments" : {
    "Inputs" : [
      {
        "description" : "The input Rufus VCF file.",
        "long form argument" : "--in",
        "short form argument" : "-i",
        "node id" : "input"
      }
    ],

    "Outputs" : [
      {
        "description" : "The output VCF file.",
        "long form argument" : "--out",
        "short form argument" : "-o",
        "node id" : "output"
      }
    ],

    "Options" : [
      {
        "description" : "The sample name.",
        "long form argument" : "--sample",
        "short form argument" : "-s",
        "node id" : "sample"
      }
    ]
  },

  "unique graph nodes" : [
    {
      "id" : "input",
      "task" : "header",
      "task argument" : "--in"
    },
    {
      "id" : "header-file",
      "task" : "header",
      "task argument" : "--out",
      "delete files" : true
    },
    {
      "id" : "sample",
      "task" : "add-sample-name",
      "task argument" : "--sample"
    },
    {
      "id" : "stripped-header",
      "task" : "last-line",
      "task argument" : "--out",
      "delete files" : true
    },
    {
      "id" : "added-sample",
      "task" : "add-sample-name",
      "task argument" : "--out",
      "delete files" : true
    },
    {
      "id" : "fixed-vcf",
      "task" : "replace-header",
      "task argument" : "--out",
      "delete files" : true
    },
    {
      "id" : "sorted-vcf",
      "task" : "sort",
      "task argument" : "--out"
    },
    {
      "id" : "output",
      "task" : "unique",
      "task argument" : "--out"
    }
  ],

  "connect nodes" : [
    {
      "source" : "header-file",
      "target" : "last-line",
      "argument" : "--in"
    },
    {
      "source" : "stripped-header",
      "target" : "add-sample-name",
      "argument" : "--in"
    },
    {
      "source" : "input",
      "target" : "replace-header",
      "argument" : "--in"
    },
    {
      "source" : "fixed-vcf",
      "target" : "sort",
      "argument" : "--in"
    },
    {
      "source" : "sorted-vcf",
      "target" : "unique",
      "argument" : "--in"
    },
    {
      "source" : "added-sample",
      "target" : "replace-header",
      "argument" : "--header"
    },
    {
      "source" : "output",
      "target" : "index",
      "argument" : "--in"
    }
  ],

  "parameter sets" : [
    {
      "id" : "default",
      "description" : "Default parameter set requires user to input all input filenames.",
      "data" : []
    },

    {
      "id" : "test",
      "description" : "Test parameter set for the test harness.",
      "data" : [
        {
          "id" : "vcf",
          "node" : "vcf",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome.vcf.gz"]
        }
      ]
    }
  ]
}
