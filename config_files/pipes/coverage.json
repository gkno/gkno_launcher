{
  "description" : "Generate histogram of Tangram fragment length distribution.",
  "categories" : ["Visualisation"],

  "tasks" : {
    "calculate-coverage" : {
      "tool" : "genome-coverage"
    },
    "convert-to-txt" : {
      "tool" : "convert-bedtools-coverage"
    },
    "plot" : {
      "tool" : "r-plot"
    }
  },

  "nodes" : [
    {
      "ID" : "input",
      "description" : "The input sorted BAM file.",
      "long form argument" : "--in",
      "short form argument" : "-i",
      "tasks" : {
        "calculate-coverage" : "--in"
      }
    },
    {
      "ID" : "max-depth",
      "long form argument" : "--combine-max-depth",
      "short form argument" : "-c",
      "description" : "Combine all positions with a depth >= max into a single bin in the histogram.",
      "tasks" : {
        "calculate-coverage" : "--combine-max-depth"
      }
    },
    {
      "ID" : "convert",
      "description" : "Convert the genome coverage into a text file.",
      "tasks" : {
        "calculate-coverage" : "--out",
        "convert-to-txt" : "--in"
      }
    },
    {
      "ID" : "refs",
      "description" : "A sorted list of reference sequences to use when plotting the histogram.",
      "long form argument" : "--reference-sequences",
      "short form argument" : "-s",
      "tasks" : {
        "convert-to-txt" : "--reference-sequences"
      }
    },
    {
      "ID" : "normalise",
      "description" : "Normalise the read counts based on the reference sequence length.",
      "long form argument" : "--normalise",
      "short form argument" : "-n",
      "tasks" : {
        "convert-to-txt" : "--normalise"
      }
    },
    {
      "ID" : "zero",
      "description" : "Plot the bin of reads with zero coverage.",
      "long form argument" : "--include-zero",
      "short form argument" : "-z",
      "tasks" : {
        "convert-to-txt" : "--include-zero"
      }
    },
    {
      "ID" : "max-bin",
      "description" : "Only create bins for depth 1 to MAX.",
      "long form argument" : "--maximum-coverage-bin",
      "short form argument" : "-m",
      "tasks" : {
        "convert-to-txt" : "--maximum-coverage-bin"
      }
    },
    {
      "ID" : "pass-to-r",
      "description" : "Pass the coverage text file to R.",
      "tasks" : {
        "convert-to-txt" : "--out",
        "plot" : "--in"
      },
      "delete files" : true
    },
    {
      "ID" : "plot",
      "description" : "Plot the tab delimited file with R.",
      "long form argument" : "--r-script",
      "short form argument" : "-r",
      "tasks" : {
        "plot" : "--script"
      }
    },
    {
      "ID" : "output",
      "description" : "The output pdf coverage plot file.",
      "long form argument" : "--out",
      "short form argument" : "-o",
      "tasks" : {
        "plot" : "--out"
      }
    },
    {
      "ID" : "x",
      "description" : "The x axis label [coverage].",
      "long form argument" : "--x-label",
      "short form argument" : "-x",
      "tasks" : {
        "plot" : "--x-label"
      }
    },
    {
      "ID" : "y",
      "description" : "The y axis label [read count].",
      "long form argument" : "--y-label",
      "short form argument" : "-y",
      "tasks" : {
        "plot" : "--y-label"
      }
    },
    {
      "ID" : "legend",
      "description" : "The legend title [reference sequence].",
      "long form argument" : "--legend",
      "short form argument" : "-l",
      "tasks" : {
        "plot" : "--legend"
      }
    }
  ],

  "parameter sets" : [
    {
      "ID" : "default",
      "description" : "The default parameter set sets all the parameters for the pipeline to run.",
      "nodes" : [
        {
          "ID" : "xlab",
          "argument" : "--x-label",
          "values" : ["coverage"]
        },
        {
          "ID" : "ylab",
          "argument" : "--y-label",
          "values" : ["'read count'"]
        },
        {
          "ID" : "legend",
          "argument" : "--legend",
          "values" : ["'reference sequence'"]
        },
        {
          "ID" : "maxbin",
          "argument" : "--maximum-coverage-bin",
          "values" : [100]
        },
        {
          "ID" : "depth",
          "argument" : "--combine-max-depth",
          "values" : [100]
        },
        {
          "ID" : "seqs",
          "argument" : "--reference-sequences",
          "values" : ["$(RESOURCES)/tutorial/current/autosome_sex.txt"]
        },
        {
          "ID" : "r-script",
          "argument" : "--r-script",
          "values" : ["$(TOOL_BIN)/R/plot-histogram.r"]
        }
      ]
    },

    {
      "ID" : "test",
      "description" : "Parameter set for use with the test-harness.",
      "nodes" : [
      ]
    }
  ]
}
